{
    "name": "ink",
    "displayName": "ink",
    "description": "Inkle's Ink scripting language support for Visual Studio Code",
    "version": "1.3.1",
    "repository": {
        "type": "git",
        "url": "https://github.com/sequitur/ink-vscode.git"
    },
    "author": {
        "name": "Bruno Dias",
        "email": "bruno.r.dias@gmail.com"
    },
    "license": "MIT",
    "publisher": "bruno-dias",
    "engines": {
        "vscode": "^1.24.1"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:ink",
        "onCommand:ink.preview"
    ],
    "main": "./out/src/extension",
    "keywords": [
        "ink",
        "inkle",
        "syntax"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#BEBEBE",
        "theme": "light"
    },
    "contributes": {
        "languages": [
            {
                "id": "ink",
                "aliases": [
                    "Ink",
                    "ink"
                ],
                "extensions": [
                    ".ink",
                    ".ink2"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": {
            "command": "ink.preview",
            "title": "Preview the current Ink Story",
            "category": "Ink"
        },
        "grammars": [
            {
                "language": "ink",
                "scopeName": "source.ink",
                "path": "./syntaxes/ink.tmLanguage"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Ink configuration",
            "properties": {
                "ink.mainStoryPath": {
                    "scope": "resource",
                    "type": "string",
                    "description": "Path to the main ink file, used by Inklecate to build the story."
                },
                "ink.inklecateExecutablePath": {
                    "scope": "resource",
                    "type": "string",
                    "description": "Path to the inklecate executable."
                },
                "ink.runThroughMono": {
                    "scope": "resource",
                    "type": "boolean",
                    "description": "Runs 'inklecateExecutablePath' through mono."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "npm run compile:webview && tsc -p ./",
        "compile:webview": "webpack --config webview/webpack.config.js",
        "watch": "npm run compile:webview && tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/node": "^8.0.34",
        "typescript": "^2.5.3",
        "webpack": "^4.16.1",
        "webpack-cli": "^3.1.0",
        "html-webpack-inline-source-plugin": "0.0.10",
        "html-webpack-plugin": "^3.2.0",
        "mini-css-extract-plugin": "^0.4.1",
        "optimize-css-assets-webpack-plugin": "^5.0.0",
        "css-loader": "^1.0.0"
    },
    "dependencies": {
        "vscode": "^1.1.18",
        "vscode-languageclient": "^4.2.1",
        "ink-language-server": "^0.1.6",
        "inkjs": "^1.7.1"
    }
}
